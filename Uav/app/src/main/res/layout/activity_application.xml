<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".applications.ApplicationActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/head"
            layout="@layout/head" />


        <!-- 中间布局 -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/head"
            android:layout_marginBottom="60dp"
            android:padding="20dp">
            <!-- 航拍视图 -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.xuexiang.xui.widget.imageview.RadiusImageView
                    android:id="@+id/check_uav_video"
                    riv_corner_radius="16px"
                    riv_is_touch_select_mode_enabled="true"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:src="@drawable/video"
                    app:riv_selected_mask_color="#80000000" />
                <TextView
                    android:layout_below="@id/check_uav_video"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="航拍视角"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"/>
            </RelativeLayout>
            <!-- 发送指令 -->
            <RelativeLayout
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.xuexiang.xui.widget.imageview.RadiusImageView
                    android:id="@+id/send_at"
                    riv_corner_radius="16px"
                    riv_is_touch_select_mode_enabled="true"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:src="@drawable/send_at"
                    app:riv_selected_mask_color="#80000000" />
                <TextView
                    android:layout_below="@id/send_at"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="发送指令"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"/>
            </RelativeLayout>
            <!-- 语音操作 -->
            <RelativeLayout
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.xuexiang.xui.widget.imageview.RadiusImageView
                    android:id="@+id/yuyingshibie"
                    riv_corner_radius="16px"
                    riv_is_touch_select_mode_enabled="true"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:src="@drawable/yuyingshibie_app_logo"
                    app:riv_selected_mask_color="#80000000" />
                <TextView
                    android:layout_below="@id/yuyingshibie"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="语音识别"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"/>
            </RelativeLayout>
            <!-- 查看截图 -->
            <RelativeLayout
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.xuexiang.xui.widget.imageview.RadiusImageView
                    android:id="@+id/look_Album"
                    riv_corner_radius="16px"
                    riv_is_touch_select_mode_enabled="true"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:src="@drawable/look_uav_album"
                    app:riv_selected_mask_color="#80000000" />
                <TextView
                    android:layout_below="@id/look_Album"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="查看航拍内容"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"/>
            </RelativeLayout>
        </GridLayout>

        <RelativeLayout
            android:id="@+id/footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <include layout="@layout/footer" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>