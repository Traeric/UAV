<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="语音助手设置">

        <ListPreference
            app:defaultValue="0"
            app:entries="@array/timbre_title"
            app:entryValues="@array/timbre_value"
            app:key="voiceStyle"
            app:title="语音助手音色设置"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="5"
            app:entries="@array/volume_title"
            app:entryValues="@array/volume_value"
            app:key="volumeSet"
            app:title="语音助手音量设置"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="5"
            app:entries="@array/speed_title"
            app:entryValues="@array/speed_value"
            app:key="speedSet"
            app:title="语音助手语速设置"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>
